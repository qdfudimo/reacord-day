{
	"bsonType": "object",
	"required": ["user_id"],
	"permission": {
		"read": "doc.user_id == auth.uid",
		"create": "auth.uid != null",
		"update": "doc.user_id == auth.uid",
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "存储文档 ID（用户 ID），系统自动生成"
		},
		"user_id": {
			"bsonType": "string",
			"description": "个性签名ID， 参考`uni-id-users` 表",
			"foreignKey": "reacord-users._id",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"short_content": {
			"bsonType": "string",
			"title": "个性短句",
			"description": "个性短句",
			"trim": "both"
		},
		"short_name": {
			"bsonType": "string",
			"title": "个性短句创始人",
			"description": "个性短句创始人",
			"defaultValue": "",
			"trim": "both"
		},
		"create_time": {
			"bsonType": "timestamp",
			"title": "创建时间",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		}
	}
}
