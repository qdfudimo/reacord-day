.schedule_view {
    display: flex;
    flex-direction: column;
    overflow: hidden;
    position: relative;
}
.schedule_view::after {
    z-index: -1;
    position: absolute;
    top: 0;
    left: 0;
    content: '';
    width: 100%;
    height: 100%;
    background-image: linear-gradient(90deg, rgba(60, 10, 30, .04) 3%, transparent 0), linear-gradient(1turn, rgba(60, 10, 30, .04) 3%, transparent 0);
    background-size: 20px 20px;
    background-position: 50%;
    background-repeat: repeat;
}
.schedule_top {
    font-size: 12px;
    display: flex;
    align-items: center;
    color: #666;
    margin-bottom: 10px;
    position: relative;
}
.mood {
    position: absolute;
    padding: 2px 8px;
    border: 1px solid #39B54A;
    border-radius: 2px;
    right: 10px;
}
.schedule_avatr {
    margin-right: 10px;
    width: 32px;
    height: 32px;
    border-radius: 50%;
}
.schedule_userName {
    display: block;
    font-size: 14px;
