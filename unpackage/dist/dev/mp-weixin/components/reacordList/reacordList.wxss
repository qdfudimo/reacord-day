/* box-shadow: 0rpx 4rpx 10rpx 0rpx rgba(85, 85, 85, 0.10); */
.pictures {
    margin-top: 14px;
    padding: 0 0 10rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}
.picture {
    border-radius: 8px;
    overflow: hidden;
    background-color: yellowgreen;
    width: calc(33.33% - 8rpx);
    margin-right: 12rpx;
}
.picture:nth-child(3n) {
    margin-right: 0px;
}
.picture image {
    width: 100%;
    height: 100%;
